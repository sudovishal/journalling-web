  <style>
   .error-message {
      color: red;
    }

    body {
      background-color: #2d2828; /* Set the background color to a dark shade */
      color: #8b8484; /* Set the text color to a light shade */
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Sign Up</h4>
          </div>
          <div class="card-body">
            <form action="/signup" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
                <% if (emailError) { %>
                  <p class="error-message"><%= emailError %></p>
                <% } %>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                <% if (passError) { %>
                  <p class="error-message"><%= passError %></p>
                <% } %>
              </div>
              <button type="submit" class="btn btn-success mt-3">Sign Up</button>
            </form>
            <div class="mt-3 text-center">
              <span class="text-muted">Already have an account?</span>
              <a href="/login" class="text-primary ml-1">Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

